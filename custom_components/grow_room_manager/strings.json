        "data": {
          "room_type": "Room Type"
        },
        "data_description": {
          "room_type": "Flower rooms have a fixed 84-day cycle. Veg rooms track multiple batches continuously."
        }
      },
      "flower_room": {
        "title": "Add Flower Room",
