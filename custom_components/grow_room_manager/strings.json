          "room_id": "Room ID",
          "name": "Room Name",
          "start_date": "Start Date (fixed)",
          "start_date_entity": "Start Date Sensor (dynamic)",
          "calendar_entity": "Calendar (optional)",
          "todo_entity": "Todo List (optional)"
        },
        "data_description": {
          "room_id": "Unique ID like f1, f2, f3",
          "name": "Display name for this room",
